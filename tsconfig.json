{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "CommonJS",
        "baseUrl": "src",
        "rootDir": "src",
        "moduleResolution": "node",
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "build"]
}
